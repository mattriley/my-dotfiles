#!/bin/bash

NORM=$(tput sgr0)
BOLD=$(tput bold)

function install {
    local profile="$1"    
    local target="profiles/$profile"

    echo "Installing $BOLD$profile$NORM profile..."
    echo

    find "$target" -type f -print0 | 
        while IFS= read -r -d '' path; do 
            local dest="$HOME${path#"$target"}"
            mkdir -p "$(dirname "$dest")"
            ln -sfv "$(pwd)/$path" "$dest"
        done

    echo
}

echo
install "default"
[ "$1" ] && install "$1" 
